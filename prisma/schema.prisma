generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:011201171@localhost:3306/amarunion"
}

model users {
  name              String
  number            String    @id
  pressent_address  String
  permanent_address String
  nid               String    @unique
  password          String
  gender            String    @default("male")
  bdate             String    @default("0000-00-00")
  vataboi           vataboi[]
  prof_pic String?
}

model vataboi {
  vataid  String @id
  user_id String @default("null")
  pics String?
  autism_type String?
  autism_limit String?
  mis_number String?
  status String? @default("null")
  users   users  @relation(fields: [user_id], references: [number], onDelete: Cascade)
  type String?
}
